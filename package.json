{
  "name": "codequest",
  "displayName": "CodeQuest - Gamify Your Coding",
  "description": "Turn VS Code into an RPG adventure with levels, streaks, and boss battles!",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/codequest"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codequest.sidebar",
    "onView:codequest.webview",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codequest.startBossBattle",
        "title": "Start Boss Battle",
        "category": "CodeQuest"
      },
      {
        "command": "codequest.completeBossBattle",
        "title": "Complete Boss Battle",
        "category": "CodeQuest"
      },
      {
        "command": "codequest.killBossBattle",
        "title": "Kill Boss Battle",
        "category": "CodeQuest"
      },
      {
        "command": "codequest.resetStats",
        "title": "Reset All Stats",
        "category": "CodeQuest"
      },
      {
        "command": "codequest.triggerWizard",
        "title": "Trigger Wizard",
        "category": "CodeQuest"
      },
      {
        "command": "codequest.killWizard",
        "title": "Kill Wizard",
        "category": "CodeQuest"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codequest",
          "title": "CodeQuest",
          "icon": "$(game)"
        }
      ]
    },
    "views": {
      "codequest": [
        {
          "id": "codequest.sidebar",
          "name": "üìä Game Stats",
          "when": "true"
        },
        {
          "id": "codequest.webview",
          "name": "üñºÔ∏è Knight Display",
          "type": "webview",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.4"
  }
}