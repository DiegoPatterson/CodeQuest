{
  "name": "codequest",
  "displayName": "CodeQuest - Gamify Your Coding",
  "description": "Turn VS Code into an RPG adventure with levels, streaks, and boss battles!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codequest.startBossBattle",
        "title": "Start Boss Battle",
        "category": "CodeQuest"
      },
      {
        "command": "codequest.completeBossBattle",
        "title": "Complete Boss Battle",
        "category": "CodeQuest"
      },
      {
        "command": "codequest.resetStats",
        "title": "Reset All Stats",
        "category": "CodeQuest"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "codequestSidebar",
          "name": "CodeQuest",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codequest",
          "title": "CodeQuest",
          "icon": "$(game)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}