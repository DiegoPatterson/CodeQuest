{
  "name": "codequest",
  "displayName": "CodeQuest - Gamify Your Coding",
  "description": "Turn VS Code into an RPG adventure with levels, streaks, and boss battles!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codequest.startBossBattle",
        "title": "Start Boss Battle",
        "category": "CodeQuest"
      },
      {
        "command": "codequest.completeBossBattle",
        "title": "Complete Boss Battle",
        "category": "CodeQuest"
      },
      {
        "command": "codequest.resetStats",
        "title": "Reset All Stats",
        "category": "CodeQuest"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codequest",
          "title": "CodeQuest",
          "icon": "$(game)"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "codequest.sidebar",
          "name": "ðŸŽ® CodeQuest",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}